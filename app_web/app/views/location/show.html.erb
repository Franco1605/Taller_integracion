<div class=buscador>
  <%=form_tag "/search/show", method: :get do %>
      <%=text_field_tag :keyword, nil, placeholder: "Ingresa alguna palabra"%>
      <%=content_tag :button, type: :submit do %>
        <div class=button>Buscar </div>
      <%end%>
  <%end%>
</div>

<div class=title>
  <h1>Lugar: <%=@response_location["name"]%></h1>
</div>

<table style="width:100%">
  <tr>
    <th>Nombre</th>
    <th>Tipo</th>
    <th>Dimensi√≥n</th>
    <th>Residentes</th>
  </tr>
  <tr>
    <td> <%= @response_location["name"] %> </td>
    <td> <%=@response_location["type"]%> </td>
    <td> <%=@response_location["dimension"]%> </td>
    <td>
      <%if @personajes.is_a?(Hash)%>
        <ul>
          <li> <%= link_to @personajes["name"], character_show_info_path(@personajes["id"])%> </li>
        </ul>
      <%else%>
        <%for elemento in @personajes do%>
          <ul>
            <li> <%= link_to elemento["name"], character_show_info_path(elemento["id"])%> </li>
          </ul>
        <% end %>
      <%end%>
    </td>
  </tr>
</table>
