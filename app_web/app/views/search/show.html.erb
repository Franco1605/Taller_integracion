<div class=buscador>
  <%=form_tag "/search/show", method: :get do %>
      <%=text_field_tag :keyword, nil, placeholder: "Ingresa alguna palabra"%>
      <%=content_tag :button, type: :submit do %>
        <div class=button>Buscar </div>
      <%end%>
  <%end%>
</div>

<div class=title>
  <h1>Lista de resultados</h1>
</div>

<table style="width:100%">
  <tr>
    <th>Nombre</th>
    <th>Tipo</th>
  </tr>
  <%for elemento in @lista_resultados do %>
    <tr>
      <%if elemento[1]=="No hay episodios asociados"%>
        <td><%= "No se han encontrado resultados para los episodios"%></td>
        <td><%= ""%></td>
      <%elsif elemento[1]!= "No hay episodios asociados" && elemento[2]=="episode"%>
        <td><%= link_to elemento[1], episode_show_path(elemento[0])%></td>
        <td><%= elemento[2]%></td>
      <%end%>
      <%if elemento[1]=="No hay lugares asociados"%>
        <td><%= "No se han encontrado resultados para los lugares"%></td>
        <td><%= ""%></td>
      <%elsif elemento[1]!= "No hay lugares asociados" && elemento[2]=="location"%>
        <td><%= link_to elemento[1],location_show_info_path(elemento[0])%></td>
        <td><%= elemento[2]%></td>
      <%end%>
      <%if elemento[1]=="No hay personajes asociados"%>
        <td><%= "No se han encontrado resultados para los personajes"%></td>
        <td><%= ""%></td>
      <%elsif elemento[1]!= "No hay personajes asociados" && elemento[2]=="character"%>
        <td><%= link_to elemento[1], character_show_info_path(elemento[0])%></td>
        <td><%= elemento[2]%></td>
      <%end%>
    </tr>
  <% end %>
</table>
